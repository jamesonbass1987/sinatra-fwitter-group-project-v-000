<h1>Edit Tweet</h1>


<form action="/tweets/<%= @tweet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <textarea name="content" rows="8" cols="80" id="content"><%= @tweet.content %></textarea>
  <p><input type="submit" value="submit"></p>
</form>
<a href="/tweets/<%= @tweet.id %>/delete"><button type="button" >Delete Tweet</button></a>
